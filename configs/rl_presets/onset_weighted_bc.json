{
    "name": "Onset-Weighted BC",
    "description": "Sophisticated early-warning: Weight by divergence_rate × value_drops × |advantages|. Focuses on divergence onset points.",
    
    "Nep_rl": 2,
    "lim_sv": 1,
    "rl_batch_size": 64,
    
    "rl_lr_rl": 1e-5,
    "rl_lr_value": 1e-4,
    
    "rl_lambda_dpg": 0.0,
    "rl_lambda_value": 0.0,
    "rl_lambda_bc": 2.0,
    "rl_lambda_ref": 1.0,
    "rl_lambda_contrastive": 0.0,
    "rl_contrastive_margin": 1.0,
    
    "rl_bc_weighting_mode": "onset",
    "rl_advantage_method": "monte_carlo",
    "rl_train_on_failures_only": true,
    "rl_gamma": 0.95,
    "rl_gae_lambda": 0.95,
    
    "rl_collision_penalty": 5.0,
    "rl_clearance_threshold": 0.3,

    "mc_reward_components": {
        "use_collision": true,
        "use_clearance": false,
        "use_query_in_view": false,
        "collision_penalty": 5.0,
        "clearance_weight": 0.0,
        "query_reward": 0.0,
        "clearance_threshold": 0.3,
        "success_reward": 10.0
    }
}
